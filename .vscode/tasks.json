{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": {
				"owner": "webpack",
				"severity": "error",
				"fileLocation": "absolute",
				"pattern": {
					"regexp": "ERROR in (.+)",
					"file": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "webpack .+ is watching",
					"endsPattern": "webpack .+ compiled"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		}
	]
}
